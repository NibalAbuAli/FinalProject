
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4; 
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        color: #333;
    }

    p {
        color: #666;
    }

    a {
        color: #007BFF;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
</style>
</head>
<body>

    <% if (errors && errors.length > 0) { %>
       <div class="container">
        <div style="color: red;">
            <% errors.forEach(error => { %>
                <p><%= error.msg %></p>
            <% }); %> </div>
        <a href="adminpage.html" style="color:cadetblue">قم بالعودة للطلب من جديد</a>
       </div>
    <% } %>
</body>
    
